<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ThreeBallRotationView">
        <attr name="first_ball_color" format="color"/>
        <attr name="second_ball_color" format="color"/>
        <attr name="third_ball_color" format="color"/>
        <attr name="balls_distance" format="dimension"/>
        <attr name="ball_max_radius" format="dimension"/>
        <attr name="ball_min_radius" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="CommonBar">
        <!--左边按钮是否可见|背景-->
        <attr name="left_btn_visible" format="boolean"/>
        <attr name="left_btn_src" format="color|reference"/>
        <!--左边文字是否可见|文字|文字大小-->
        <attr name="left_tv_visible" format="boolean"/>
        <attr name="left_text" format="string"/>
        <attr name="left_tv_size" format="dimension"/>
        <!--右边按钮是否可见|背景-->
        <attr name="right_btn_visible" format="boolean"/>
        <attr name="right_btn_src" format="boolean"/>
        <!--右边文字是否可见|文字|文字大小-->
        <attr name="right_tv_visible" format="boolean"/>
        <attr name="right_text" format="string"/>
        <attr name="right_tv_size" format="dimension"/>
        <!--标题文字-->
        <attr name="center_text" format="string"/>
        <attr name="center_title_size" format="dimension"/>
        <attr name="commonBar_background" format="color|reference"/>
    </declare-styleable>
</resources>